<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd" extends="pagebuilder_base_form_with_background_video">
<fieldset name="lcpfr" sortOrder="60">
        <settings>
            <label translate="true">LCP</label>
            <collapsible>true</collapsible>
            <opened>true</opened>
        </settings>
        <field name="dwidth" sortOrder="10" formElement="input">
            <settings>
                <label translate="true">Desktop Image Width</label>
                <validation>
                    <rule name="validate-string" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="dheight" sortOrder="20" formElement="input">
            <settings>
                <label translate="true">Desktop Image Height</label>
                <validation>
                    <rule name="validate-string" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="mwidth" sortOrder="30" formElement="input">
            <settings>
                <label translate="true">Mobile Image Width</label>
                <validation>
                    <rule name="validate-string" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="mheight" sortOrder="40" formElement="input">
            <settings>
                <label translate="true">Mobile Image Height</label>
                <validation>
                    <rule name="validate-string" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
		<field name="lazyloading" sortOrder="50" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">lazy</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">lazyloading</label>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options>
                            <option name="0" xsi:type="array">
                                <item name="value" xsi:type="string">lazy</item>
                                <item name="label" xsi:type="string" translate="true">lazy</item>
                            </option>
                            <option name="1" xsi:type="array">
                                <item name="value" xsi:type="string">eager</item>
                                <item name="label" xsi:type="string" translate="true">eager</item>
                            </option>
                        </options>
                    </settings>
                </select>
            </formElements>
        </field>
		<field name="fetchpriority" sortOrder="60" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">auto</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">fetchpriority</label>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options>
                            <option name="0" xsi:type="array">
                                <item name="value" xsi:type="string">auto</item>
                                <item name="label" xsi:type="string" translate="true">auto</item>
                            </option>
                            <option name="1" xsi:type="array">
                                <item name="value" xsi:type="string">high</item>
                                <item name="label" xsi:type="string" translate="true">high</item>
                            </option>
							 <option name="2" xsi:type="array">
                                <item name="value" xsi:type="string">low</item>
                                <item name="label" xsi:type="string" translate="true">low</item>
                            </option>
                        </options>
                    </settings>
                </select>
            </formElements>
        </field>		
    </fieldset>
</form>
